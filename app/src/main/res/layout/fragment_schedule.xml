<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="textColor"
            type="Integer" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/weekday_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/empty"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAlignment="center" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/mon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/mon"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/date_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/22"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_tues"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/tues"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/tues"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/date_tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/23"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_wed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/wed"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/date_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/24"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_thur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/thur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/thur"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/date_thur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/25"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_fri"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/date_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/26"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/fri"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_sat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/sat"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/date_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/27"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_sun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/date_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="04/28"
                        android:textColor="@{textColor}" />

                    <TextView
                        android:id="@+id/sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/sun"
                        android:textColor="@{textColor}" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weekday_bar">

            <GridLayout
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:columnOrderPreserved="false"
                android:rowCount="14">

                <TextView
                    android:id="@+id/fill1"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill2"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill3"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill4"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill5"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="5"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill6"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="6"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fill7"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="7"
                    android:layout_columnWeight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/ord1"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="1" />

                <TextView
                    android:id="@+id/ord2"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="2" />

                <TextView
                    android:id="@+id/ord3"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="3" />

                <TextView
                    android:id="@+id/ord4"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="4" />

                <TextView
                    android:id="@+id/ord5"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="5" />

                <TextView
                    android:id="@+id/ord6"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="6" />

                <TextView
                    android:id="@+id/ord7"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="7" />

                <TextView
                    android:id="@+id/ord8"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="8" />

                <TextView
                    android:id="@+id/ord9"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="9" />

                <TextView
                    android:id="@+id/ord10"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="10" />

                <TextView
                    android:id="@+id/ord11"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="11"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="11" />

                <TextView
                    android:id="@+id/ord12"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_row="12"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textColor="@{textColor}"
                    android:text="12" />

                <TextView
                    android:id="@+id/ord13"
                    android:layout_width="16dp"
                    android:layout_height="1dp"
                    android:layout_row="13"
                    android:layout_column="0"
                    android:gravity="center" />

            </GridLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>